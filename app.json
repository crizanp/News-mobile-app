{
  "expo": {
    "name": "Crypto News App",
    "slug": "CryptoNewsApp",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cryptonewsapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cryptonews.aggregrator",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash-bg.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cryptonews.aggregrator",
      "permissions": [
        "com.google.android.gms.permission.AD_ID"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-bg.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#0f0f23",
          "dark": {
            "image": "./assets/images/splash-bg.png",
            "backgroundColor": "#0f0f23"
          }
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-5565400586025993~4243996135",
          "android_app_id": "ca-app-pub-5565400586025993~4243996135",
          "iosAppId": "ca-app-pub-5565400586025993~1534341812"
        }
      ],
      [
        "expo-tracking-transparency",
        {
          "userTrackingPermission": "This app uses your activity to provide personalized ad experiences. Your privacy is important to us."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "91380c87-72d8-43a0-abb6-e650a55da057"
      }
    },
    "owner": "ercizanp"
  }
}
